<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE SCENARIO SYSTEM "sim/multiModelTrafficSimulatorInput.dtd">

<SCENARIO network_filename="onramp.xodr">
  <VEHICLES>
    <VEHICLE label="ACC1" length="6" b_max="9">
      <LONGITUDINAL_MODEL>
        <ACC v0="35" T="1.2" s0="2" s1="0" delta="4" a="1.2" b="2.0" coolness="1"/>
      </LONGITUDINAL_MODEL>
      <LANE_CHANGE_MODEL eur_rules="true" crit_speed_eur="20">
        <MOBIL b_safe="5.0" s_min="2.0" threshold="0.1" bias_right="0.05" politeness="0.1"/>
      </LANE_CHANGE_MODEL>
    </VEHICLE>
    <!-- trucks -->
    <VEHICLE label="ACC2" length="16" b_max="9">
      <LONGITUDINAL_MODEL>
        <ACC v0="25" T="1.4" s0="2" s1="2" delta="4" a="0.8" b="2.0" coolness="1"/>
      </LONGITUDINAL_MODEL>
      <LANE_CHANGE_MODEL eur_rules="true" crit_speed_eur="20">
        <MOBIL b_safe="4.0" s_min="2.0" threshold="0.2" bias_right="0.3" politeness="0.1"/>
      </LANE_CHANGE_MODEL>
    </VEHICLE>
    <VEHICLE label="Obstacle" length="0">
      <LONGITUDINAL_MODEL>
        <IDM v0="0" T="1" s0="2" a="1.0" b="1.5"/>
      </LONGITUDINAL_MODEL>
      <LANE_CHANGE_MODEL/>
    </VEHICLE>
  </VEHICLES>
  
  
  <SIMULATION dt="0.2" duration="72000" fixed_seed="true" seed="42" crash_exit="false">
    <TRAFFIC_COMPOSITION write_fund_diagrams="false">
      <!-- <VEHICLE_TYPE label="IDM1" fraction="0" /> -->
      <VEHICLE_TYPE label="ACC1" fraction="0.8" relative_v0_randomization="0.2"/>
      <VEHICLE_TYPE label="ACC2" fraction="0.2" relative_v0_randomization="0.2"/>
    </TRAFFIC_COMPOSITION>
    
    
    
    <!-- length="3800"  lanes="2" -->
    <ROAD id="1" >
      <INITIAL_CONDITIONS>
        <!-- <IC_MACRO x="600" rho_per_km="2" v="30"/> -->
      </INITIAL_CONDITIONS>
      <TRAFFIC_SOURCE logging="false">
        <INFLOW t="0" q_per_hour="1600" v="24"/>
      </TRAFFIC_SOURCE>
      <TRAFFIC_SINK/>
      <!-- improve vehicle performance at inflow -->
      <FLOW_CONSERVING_INHOMOGENEITIES>
      </FLOW_CONSERVING_INHOMOGENEITIES>
      <SPEED_LIMITS>
        <!--   <SPEED_LIMIT x="2600" speedlimit_kmh="80" /> -->
        <!--   <SPEED_LIMIT x="3600" speedlimit_kmh="200" /> -->
      </SPEED_LIMITS>
      <SIMPLE_RAMPS/>
        <!-- length of offramp is calculated by used RoadMapping (here: RoadMappingPolyBezier) -->
      <TRAFFIC_LIGHTS/>
      <DETECTORS/>
      
    </ROAD>
    
    
    
    <!-- merge_length="400"  x="3200" length="500"-->
    <ROAD id="4"  >
      <INITIAL_CONDITIONS/>
      <!--  id="-1" -->
      <TRAFFIC_SOURCE>
         <INFLOW t="0" q_per_hour="300" />
      </TRAFFIC_SOURCE>
      <!-- id="0" -->
      <TRAFFIC_SINK />
      <FLOW_CONSERVING_INHOMOGENEITIES />
      <SPEED_LIMITS/>
      <TRAFFIC_LIGHTS/>
      <DETECTORS/>
    </ROAD>
    
    
    <OUTPUT>
    </OUTPUT>
  </SIMULATION>
</SCENARIO>


